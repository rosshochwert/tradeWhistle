<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Trade Whistle</a>
        </div>
        <div class="navbar-collapse collapse">
        </div><!--/.navbar-collapse -->
      </div>
    </div>
    <div class="container container-sm-height" role="main"> 
      <!-- Example row of columns -->
      <div class="row row-sm-height">
          <div class="col-md-2 col-sm-height">
              <div class = "frame"><%= image_tag "user_image.png" %></div>
          </div>
        <div class="col-md-2 col-sm-height">
            <h3>Rourke Healey</h3>
            <span>Team Name: --Swag--</span> <br>
            <span>Record: 0-3</span>

          </div>

        <div class="col-md-6 col-sm-height">
          <h3>Options</h3>
            <div class="panel panel-default">
            <div class="panel-body">
               <div class="btn-group">
                 <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                   <span data-bind="label">Choose Team</span>&nbsp;<span class="caret"></span>
                 </button>
                 <ul class="dropdown-menu team-menu" role="menu">
                   <li><a href="#">Team 1</a></li>
                   <li><a href="#">Team 2</a></li>
                   <li><a href="#">Team 3</a></li>
                 </ul>
               </div>
                <div class="btn-group">
                 <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                   <span data-bind="label">Choose Metric</span>&nbsp;<span class="caret"></span>
                 </button>
                 <ul class="dropdown-menu" role="menu">
                   <li class = "metric" value = "projected"><a href="#">Point Projection</a></li>
                   <li class = "metric" value = "prk"><a href="#">Position Rank</a></li>
                   <li class = "metric" value = "owned"><a href="#">Percent Owned</a></li>
                 </ul>
               </div>
                <input type="checkbox" name="my-checkbox" checked>
                <button type = "button" class = "btn btn-default btn-md sort">Sort</button>
             </div>
          </div>
       </div>
          <div class = "col-md-2 col-sm-height">
            <div class = "frame"><%= image_tag "whistle1.png" %></div>
          </div>
        </div>
        <div class = "row">
            <div class = "col-md-2 col-sm-height cur-team">
            <h3>Your Team</h3></div>
            <div class = "col-md-2 col-sm-height opp-team">
            <h3>Opp Team</h3></div>
            <div class = "col-md-8 col-sm-height all-team">
                <h3>The League</h3>
                <div class = "row league">
                </div>
            </div>
          </div>
    </div>
    <script>
        $("[name='my-checkbox']").bootstrapSwitch();
        $( document.body ).on( 'click', '.dropdown-menu li', function( event ) {

      var $target = $( event.currentTarget );

      $target.closest( '.btn-group' )
             .find( '[data-bind="label"]' ).text( $target.text() )
                .end()
             .children( '.dropdown-toggle' ).dropdown( 'toggle' );

          return false;
        });
    </script>